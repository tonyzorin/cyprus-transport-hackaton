# Bus Signage - Environment Variables
# Copy this file to .env and customize as needed

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_USER=signage
DB_PASSWORD=signage_password
DB_DATABASE=bus_signage
DB_HOST=postgres
DB_PORT=5433

# =============================================================================
# Application Ports
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3001

# =============================================================================
# API Configuration
# =============================================================================
# Public URL for the backend API (used by frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000
